http {
    server {
        listen 80;
        server_name localhost;
    
        location / {
            root /usr/share/nginx/html;
            index index.html index.html;
        }
    
        location /api {
            # Aqui, deixamos ${INTERNALTEXT} como um espaço reservado que será substituído depois
            proxy_pass http://${INTERNALTEXT};
        }
    }
}
